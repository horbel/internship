@model SecondTry.Models.Blog
@{
    Layout = null;
    ViewBag.Title = "New Blog";
}

<h2>@ViewData["Titel"]</h2>

<form asp-controller="Blogs" asp-action="Create" method="post" class="form-horizontal" role="form">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Url" class="col-md-2 control-lable"></label>
        <div class="col-md-10">
            <input asp-for="Url" class="form-control" />
            <span asp-validation-for="Url" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" />
        </div>        
    </div>
</form>